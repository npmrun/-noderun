{
  "name": "root",
  "private": true,
  "scripts": {
    "dev:client": "cd example && cd 02 && ts-node -r tsconfig-paths/register index.ts",
    "dev": "node scripts/dev.js style",
    "build": "node scripts/build.js",
    "bootstrap": "node scripts/bootstrap.js",
    "test": "jest -c ./jest.config.js",
    "release": "lerna publish",
    "git:commit": "git add .&&git cz",
    "git:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md && git cz",
    "git:alpha": "standard-version --prerelease alpha -m 'alpha内测版本'",
    "git:beta": "standard-version --prerelease beta -m 'beta公测版本'",
    "git:release": "standard-version --release-as minor --tag-prefix 'stable-' -m 'stable稳定版本'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ls-lint",
      "commit-msg": "node ./scripts/gitVerify.js $HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.0.1",
    "@types/jest": "^25.1.4",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "node-sass": "^4.14.1",
    "rollup": "^1.32.1",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-replace": "^2.2.0",
    "ts-jest": "^25.2.1",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/plugin-typescript": "^4.0.0",
    "@ls-lint/ls-lint": "^1.8.1",
    "husky": "^4.2.5",
    "chalk": "latest",
    "dts-bundle": "^0.7.3",
    "execa": "latest",
    "fs-extra": "latest",
    "minimist": "latest",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  }
}
